generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  price       String
  discount    String
  img         String[] 
  stock       String 
}

model Service {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String 
  img         String[]  
}

model Extension {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String 
  img         String[]  
}

model Appointment {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  info       Json  
}

 

 

model Order {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  userInfo  Json
  cartItems Json
  total     String
  delivery  String
  code      String?
  paid      Boolean @default(false)
  num       String?
  remark    String?
  date      String
}

 
model Video {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId 
  img  String[]
}